                    <TextView
                        android:id="@+id/tv_comment_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_comment"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
