    <style name="dialog_button" parent="Widget.Material3.Button">
        <item name="android:background">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="signup_next_button" parent="Widget.Material3.Button">
        <item name="android:background">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:text">@string/signup_btn</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="my_page_edit_profile" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/background_chatting_message</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:text">@string/my_page_edit_profile</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="custom_chip_style" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/background_chip_background_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipIconSize">16dp</item>>
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="chipCornerRadius">32dp</item>
        <item name="chipStartPadding">10dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="NavigationTextStyle">
        <item name="android:textSize">11sp</item>
